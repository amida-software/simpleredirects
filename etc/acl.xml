<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="AuroraExtensions_SimpleRedirects::rule" title="Rule" translate="title" sortOrder="10">
                    <resource id="AuroraExtensions_SimpleRedirects::rule_operation" title="Operations" translate="title" sortOrder="10">
                        <resource id="AuroraExtensions_SimpleRedirects::actions" title="Actions" translate="title" sortOrder="10">
                            <resource id="AuroraExtensions_SimpleRedirects::create" title="Create" translate="title" sortOrder="10"/>
                            <resource id="AuroraExtensions_SimpleRedirects::view" title="View" translate="title" sortOrder="20"/>
                            <resource id="AuroraExtensions_SimpleRedirects::edit" title="Edit" translate="title" sortOrder="30"/>
                            <resource id="AuroraExtensions_SimpleRedirects::delete" title="Delete" translate="title" sortOrder="40"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="AuroraExtensions_SimpleRedirects::configuration" title="Simple Redirects"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
